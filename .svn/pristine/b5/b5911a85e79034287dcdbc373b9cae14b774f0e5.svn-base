package com.seoul.memberservlet;

import java.io.IOException;
import java.util.Date;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.seoul.common.Util;
import com.seoul.dto.Member;
import com.seoul.service.MemberService;

@WebServlet(value="/account/signup.action")
public class SignupServlet extends HttpServlet {
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		RequestDispatcher dispatcher =
				req.getRequestDispatcher("/WEB-INF/views/account/signup.jsp");
		dispatcher.forward(req, resp);
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		req.setCharacterEncoding("utf-8");
		String memberId = req.getParameter("m_memberId");
		String name = req.getParameter("m_name");
		String passwd = req.getParameter("m_passwd");
		String confirm = req.getParameter("m_confirm");
		String email = req.getParameter("m_email");
		String birthday = req.getParameter("m_birthday");
		String nickname = req.getParameter("m_nickname");
		String country_code = req.getParameter("m_country_code");
		String phone = req.getParameter("m_phone");
		String gender = req.getParameter("m_gender");
		String nation = req.getParameter("m_nation");
		String interest = req.getParameter("m_interest");
		
		Member member = new Member();
		member.setM_memberId(memberId);
		member.setM_name(name);
		passwd = Util.getHashedString(passwd, "SHA-256");
		member.setM_passwd(passwd);
		member.setM_email(email);
		member.setM_birthday(birthday);
		member.setM_name(nickname);
		member.setM_country_code(country_code);
		member.setM_phone(phone);
		member.setM_gender(gender);
		member.setM_nation(nation);
		member.setM_interest(interest);
		member.setM_active(true);
		member.setM_userType("user");
		member.setM_regDate(new Date());
		
		MemberService memberService = new MemberService();
		memberService.registerMember(member);
		
		resp.sendRedirect("/seoul/WEB-INF/view/index.jsp");
	}
}
