<%@page import="com.seoul.dto.Information"%>
<%@page import="java.util.List"%>
<%@ page language="java"
			   contentType="text/html; charset=utf-8"
    		   pageEncoding="utf-8"%>

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<title>게시물 목록</title>
	<link rel="Stylesheet" href="/seoul/styles/default.css" />
	<script src= "http://code.jquery.com/jquery-3.2.1.js"></script>
  	<script type="text/javascript">
  	$(function() { //jQuery's main function
  		$('#write').on('click', function(event) {
  			location.href = '/seoul/write3.action';
  		});
  	});
  	
	$(document).ready(function() { 
		$(".jCarouselLite").jCarouselLite({
			  btnNext: ".next",
			  btnPrev: ".prev",
			  speed: 400,
			  vertical: false,
			  circular: true,
			  easing:'easeOutQuart',
			  visible: 4,
			  start: 0,
			  scroll: 1
		 });
	});
	</script>
</head>
<body>
	<jsp:include page="/WEB-INF/views/include/header.jsp" />
	<div id="pageContainer">
		<div style="padding-top:25px;text-align:center">
			
			<input id="write" type="button" value="글쓰기" 
				style="width:300px;height:25px" />
			
			<br /><br />
			
			<!-- 페이저기능 -->
			<% List<Information> informations = (List<Information>)request.getAttribute("boards"); %>
			
			<table border="1" align="center">
				<tr style="background-color:beige;height:25px">
					<th style="width:50px">번호</th>
					<th style="width:300px">제목</th>
					<th style="width:150px">작성자</th>
					<th style="width:120px">작성일</th>
					<th style="width:80px">조회수</th>
				</tr>
				<% for (Information information : informations) { %>   <!-- 빠른포문 -->
				<tr style="height:25px">
					<td style='text-align:center'><%= information.getIn_No() %></td>
					<td style='text-align:left;padding:5px'>
					<% for (int i = 0; i < information.getDepth(); i++) { %>
					&nbsp;&nbsp;
					<% } %>
					<% if (information.getDepth() > 0) { %>
					<img src="/seoul/image/re.gif">
					<% } %>

					<% if (information.isDeleted()) { //삭제된 글인 경우%>
						<span id="deleted-message">[ 삭제된 글 ]</span>
					<% } else { //삭제되지 않은 글 %>
						<a href="detail3.action?boardno=<%= information.getIn_No() %>&pageno=<%= request.getAttribute("pageno") %>" style='text-decoration: none'>
							<%= information.getIn_Restaurant() %>
						</a>
					<% } %>
					</td>
					<td style='text-align:center'><%= information.getM_MemberId() %></td>
					<td style='text-align:center'><%= information.getRegDate() %></td>
					<td style='text-align:center'><%= information.getReadCount() %></td>
				</tr>
				<% } %>
			</table>
			<br><br>
			<%= request.getAttribute("pager").toString() %>
		</div>
	</div>	
</body>
</html>
