package com.seoul.memberservlet;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.seoul.dto.Guide;
import com.seoul.service.GuideBoardService;

/******************[마이 페이지] - [나의 신청]*********************/

@WebServlet(value = "/account/myvolunteer.action")
public class MyVolunteerServlet extends HttpServlet {

	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		// 로그인 여부 확인 -> 로그인 하지 않은 경우 로그인 화면으로 이동
		HttpSession session = req.getSession();
		if (session.getAttribute("loginuser") == null) {
			System.out.println("alert('세션이 만료되었습니다.')");
			resp.sendRedirect("/seoul/index.action");
			return;
		}
		
		String gud_writer = req.getParameter("gub_writer");
		
		GuideBoardService guideBoardService = new GuideBoardService();
		Guide guide = guideBoardService.selectVolunteerByWriter(gud_writer);
		
		req.setAttribute("guide", guide);
		
		// myvolunteer.jsp로 이동
		RequestDispatcher dispatcher = req.getRequestDispatcher("/WEB-INF/views/account/myvolunteer.jsp");
		dispatcher.forward(req, resp);
	}
	
	
}