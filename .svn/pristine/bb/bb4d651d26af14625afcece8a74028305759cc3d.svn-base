<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.dieat.mapper.MemberMapper">

	<select id="selectMemberByIdAndPasswd" parameterType="hashmap" resultType="com.dieat.dto.Member">
		SELECT m_id id, m_email email
		FROM member 
		WHERE m_id = #{id} AND m_passwd = #{passwd}
	</select>
	
	
	<insert id="insertMember" parameterType="com.dieat.dto.Member">
		INSERT INTO member (m_id, m_passwd, m_name, m_addr1, m_addr2, m_phone, m_birth, m_gender, m_email)
		VALUES (#{id}, #{passwd}, #{name}, #{addr1}, #{addr2}, #{phone}, #{birth}, #{gender}, #{email})
	</insert>

</mapper>








