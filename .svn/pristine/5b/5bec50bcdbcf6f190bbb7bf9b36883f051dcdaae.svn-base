@WebServlet(value ="/writeevent.action") 
public class WriteEventServlet extends HttpServlet {

		@Override
		protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
			RequestDispatcher dispatcher = req.getRequestDispatcher("/WEB-INF/views/contacts/writeevent.jsp");
			dispatcher.forward(req, resp);
			
		}
		
		@Override
		protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
			req.setCharacterEncoding("utf-8");
			
			
			/*String sBoardNo = req.getParameter("boardno");
			int gub_BoardNo = Integer.parseInt(sBoardNo);*/
			
			String title = req.getParameter("title");
			String writer = req.getParameter("writer");
			String content = req.getParameter("content");
			int boardtype = 2;
			
			ContactsBoard contacts = new ContactsBoard();
			contacts.setTitle(title);
			contacts.setWriter(writer);
			contacts.setContent(content);
			contacts.setBoardType(boardtype);
			
			ContactsBoardService contactsBoardService= new ContactsBoardService();
			contactsBoardService.writeBoard2(contacts);
			
			
			resp.sendRedirect("eventlist.action");
			
			}
			
		}
		

