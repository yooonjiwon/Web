*, *:before, *:after {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

body {
  font-family: 'Nunito', sans-serif;
  color: #384047;
  background-image: url('../images/seoulbackground1.jpg');
  background-size: cover;
}

form {
  max-width: 400px;
  margin: 10px auto;
  padding: 5px 30px;
  background: #f4f7f8;
  border-radius: 8px;
  position: absolute;
  top: calc(30px);
  left: calc(50%);
  z-index: 2;
}

h2 {
  margin:10px 0 10px 0;
  text-align: center;
  font-family: 나눔고딕;
  font-size: 22px;
}

input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
textarea,

select {
  background: rgba(255,255,255,0.1);
  border: none;
  font-size: 11px;
  height: 20px;
  margin: 0;
  outline: 0;
  padding: 15px;
  width: 310px;
  background-color: #e8eeef;
  color: #8a97a0;
  box-shadow: 0 1px 0 rgba(0,0,0,0.03) inset;
  margin-bottom: 10px;
  font-family: 나눔고딕;
}


input[type="radio"],
input[type="checkbox"] {
  margin: 0 4px 8px 0;
}

select {
  padding: 6px;
  height: 30px;
  border-radius: 2px;
}

button {
  padding: 10px 39px 12px 39px;
  color: #FFF;
  background-color: darkorange;
  font-size: 18px;
  text-align: center;
  font-style: normal;
  border-radius: 5px;
  width: 310px;
  border: 0px solid #3ac162;
  border-width: 1px 1px 1px;
  box-shadow: 0 -1px 0 rgba(255,255,255,0.1) inset;
  margin-bottom: 10px;
}

fieldset {
  margin-bottom: 0px;
  border: none;
}

legend {
  font-size: 15px;
  margin-bottom: 0px;
}

label {
  display: block;
  margin-bottom: 5px;
}

label.light {
  font-weight: 00;
  display: inline;
}

.number {
  background-color: #5fcf80;
  color: black;
  height: 30px;
  width: 30px;
  display: none;
  font-size: 0.8em;
  margin-right: 4px;
  line-height: 30px;
  text-align: center;
  text-shadow: 0 1px 0 rgbcf2a(255,255,255,0.2);
  border-radius: 100%;
}

