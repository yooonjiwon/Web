<%@page import="com.seoul.dto.Member"%>
<%@page import="com.seoul.dto.Information"%>
<%@ page language="java" 
			   contentType="text/html; charset=utf-8"
    		   pageEncoding="utf-8"%>

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<title>글쓰기</title>
	<link rel="Stylesheet" href="/seoul/css/default.css" />
	<link rel="Stylesheet" href="/seoul/css/input2.css" />
	
	<style type="text/css">
	a { text-decoration: none } /* 언더스코어를 없애는 작업 */
	</style>
	<script src="http://code.jquery.com/jquery-3.2.1.js"></script>
  	<script type="text/javascript">
  	$(function() { //jQuery's main function
  		$('a#write').on('click', function(event) {
  			$('form#writeform').submit();
  			event.preventDefault();// <a>의 기본 기능 수행 막는 명령
  		});
  	});
	</script>
</head>
<body>

	<div id="pageContainer">

		<jsp:include page="/WEB-INF/views/include/header.jsp" />
		
		<!-- ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ로그인유저ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ -->	
					<% Member member = (Member)session.getAttribute("loginuser"); %>
					<c:if test="${ board.m_MemberId eq loginuser.memberId }" >		
		<!-- ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ -->	
		
		<div style="padding-top:25px;text-align:center">
		<div id="inputcontent">
		    <div id="inputmain">
		        <div class="inputsubtitle">게시판 글 쓰기</div>
		        <form id="writeform" action="write3.action" method="post">
		        <table>
		            <tr>
                        <th>구역</th>
                        <td>
                            <input type="text" name="area" style="width:280px" />
                        </td>
                    </tr>
		            <tr>
		                <th>제목</th>
		                <td>
		                    <input type="text" name="title" style="width:280px" />
		                </td>
		            </tr>
		            <tr>
		                <th>작성자</th>
		                <td>
		                	<input type="text" name="memberid" style="width:280px" />

		                    <%-- <% Information information = (Information)session.getAttribute("loginuser"); %> <!-- 게시판에 로그인한 사용자의 아이디가 출력 -->
		                	<%= information.getM_MemberId() %>
		                	<!-- input type="hidden" : 서버로 전송하지만 브라우저에 표시되지 않는 요소 -->
		                	<input type="hidden" name="memberid" value="<%= information.getM_MemberId() %>" /> --%>
		                </td>
		            </tr>
		            <tr>
		                <th>주소</th>
		                <td>
		                    <input type="text" name="address" style="width:280px" />
		                </td>
		            </tr>
		            <tr>
		                <th>내용</th>
		                <td>
		                    <textarea
		                    	name="content" cols="76" rows="15"></textarea>
		                </td>
		            </tr>
		        </table>
		        <div class="buttons">
		        	<!-- <form>의 submit 수행 -->	        	
		        	<a id="write" href="#">글쓰기</a>
		        	&nbsp;&nbsp;
		        	<a href="/seoul/information/list3.action">목록보기</a>
		        </div>
		        </form>
		    </div>
		</div>
	</c:if>
<!-- ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ -->	  	
	
	</div>
	</div>

</body>
</html>